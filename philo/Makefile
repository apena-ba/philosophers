NAME = philo

BONUS_NAME = checker

CFLAGS = -Wall -Wextra -Werror

SRC = main.c action.c execution.c init.c parser.c utils.c utils2.c

OBJ = $(SRC:.c=.o)

all: ${NAME}

${NAME}: ${OBJ}
	@gcc ${CFLAGS} -o ${NAME} ${OBJ}
	@echo "\nðŸŽŠ Programa creado ðŸŽŠ\n"

${OBJ}:	$(SRC)
	@gcc ${CFLAGS} -c philo.h $(SRC)
	@echo "\nðŸ”¨ Objetos creados âœ…\n"

clean:
	@rm -rf ${OBJ}
	@rm -rf philo.h.gch
	@echo "\nðŸ§¨ Objetos destruidos âœ…\n"

fclean: clean
	@rm -f ${NAME}
	@echo "\nðŸ’¥ Archivos binarios destruidos âœ…\n"

re: fclean all

sre: re

.PHONY: bonus all clean fclean sclean re sre
